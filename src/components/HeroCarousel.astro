---
interface Props {}

const {} = Astro.props;

// Sample carousel images (replace with actual image paths)
const carouselImages = [
  {
    src: "/images/hero1.png",
    alt: "老年生活服务场景1",
    title: "我国已进入老龄社会",
    description: "让老年人老有所养、生活幸福、健康长寿是我们的共同愿望",
  },
  {
    src: "/images/hero2.jpg",
    alt: "老年生活服务场景2",
    title: "舒适生活环境",
    description: "打造安全舒适的居住环境",
  },
  {
    src: "/images/hero3.jpg",
    alt: "老年生活服务场景3",
    title: "专业照护团队",
    description: "24小时专业照护，让家人更放心",
  },
];
---

<div class="relative w-full h-[460px]" data-carousel-wrapper>
  <div class="carousel w-full h-full image-slideshow">
    {
      carouselImages.map((image, index) => (
        <div id={`slide${index + 1}`} class="carousel-item relative w-full">
          <img
            src={image.src}
            alt={image.alt}
            class="w-full h-full object-cover object-center"
          />
          <div class="absolute inset-0 bg-black bg-opacity-20 flex flex-col items-center justify-center text-center text-white px-4">
            <h1 class="text-4xl md:text-5xl font-bold mb-4">{image.title}</h1>
            <h3 class="text-xl md:text-2xl max-w-2xl">{image.description}</h3>
          </div>
        </div>
      ))
    }
  </div>
</div>

<style>
  .indicator {
    opacity: 0.4;
  }
  .image-slideshow {
    overflow: hidden;
    white-space: nowrap;
    position: relative;
  }
  .image-slideshow > div {
    animation: move 15s ease-in-out 2s infinite alternate;
    display: inline-block;
  }
  .image-slideshow > div div {
    position: absolute;
    bottom: 0;
    width: 100%;
  }
  .image-slideshow h1 {
    padding: 15px;
    margin: 0;
  }
  .image-slideshow h3 {
    padding: 0 15px 15px 15px;
    margin: 0;
  }
  @keyframes move {
    0%,
    30% {
      transform: translateX(0%);
    }
    36%,
    66% {
      transform: translateX(-100%);
    }
    72%,
    100% {
      transform: translateX(-200%);
    }
  }
</style>
