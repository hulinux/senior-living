---
interface Props {}

const { } = Astro.props;
---

<nav class="fixed top-0 w-full bg-white shadow-lg z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex">
        <a href="/" class="flex-shrink-0 flex items-center">
          <img class="h-8 w-auto" src="/logo.png" alt="Logo" />
          <span class="ml-2 text-xl font-bold text-gray-900 sm:text-2xl">老年生活服务平台</span>
        </a>
      </div>
      <div class="hidden sm:ml-6 sm:flex sm:space-x-8 lg:space-x-12">
        <a href="/" class="inline-flex items-center px-1 pt-1 border-b-2 border-purple-600 text-sm font-medium sm:text-base lg:text-lg text-purple-600">首页</a>
        <a href="/products" class="border-transparent text-purple-600 hover:border-purple-400 hover:text-purple-400 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium sm:text-base lg:text-lg">产品</a>
        <a href="/services" class="border-transparent text-purple-600 hover:border-purple-400 hover:text-purple-400 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium sm:text-base lg:text-lg">服务</a>
        <a href="/about" class="border-transparent text-purple-600 hover:border-purple-400 hover:text-purple-400 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium sm:text-base lg:text-lg">关于我们</a>
        <a href="/partners" class="border-transparent text-purple-600 hover:border-purple-400 hover:text-purple-400 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium sm:text-base lg:text-lg">合作伙伴</a>
      </div>
      <!-- Mobile menu button -->
      <div class="flex items-center sm:hidden">
        <button class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-purple-600">
          <span class="sr-only">Open main menu</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>
</nav>
