---
interface Props {}

const { } = Astro.props;
const currentPath = Astro.url.pathname;
const isActive = (path: string) => currentPath === path;
const isSectionActive = (section: string) => currentPath.startsWith(section);
---

<header class="bg-white dark:bg-gray-900 shadow-sm fixed w-full z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-20">
      <div class="flex items-center">
        <a href="/" class="flex-shrink-0 flex items-center">
          <img src="/images/logo.png" alt="鼎泰养老服务" class="h-10 w-auto mr-3" />
          <span class="text-2xl font-bold text-purple-700 dark:text-purple-400">鼎泰养老服务</span>
        </a>
      </div>
      
      <!-- Desktop Navigation -->
      <nav class="hidden md:ml-6 md:flex md:items-center md:space-x-8">
        <div class="relative group">
          <a 
            href="/" 
            class={`inline-flex items-center px-1 pt-1 text-sm font-medium ${isActive('/') ? 'text-purple-600 dark:text-purple-400' : 'text-gray-900 dark:text-white hover:text-purple-600 dark:hover:text-purple-400'}`}
          >
            首页
            <span class={`absolute bottom-0 left-0 w-full h-0.5 bg-purple-600 dark:bg-purple-400 transition-all duration-200 ${isActive('/') ? 'scale-100' : 'scale-0 group-hover:scale-100'}`}></span>
          </a>
        </div>

        <div class="relative group">
          <button class="inline-flex items-center px-1 pt-1 text-sm font-medium text-gray-900 dark:text-white hover:text-purple-600 dark:hover:text-purple-400">
            产品与服务
            <svg class="ml-1 h-4 w-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path>
            </svg>
            <span class={`absolute bottom-0 left-0 w-full h-0.5 bg-purple-600 dark:bg-purple-400 transition-all duration-200 ${isSectionActive('/products') || isSectionActive('/services') ? 'scale-100' : 'scale-0 group-hover:scale-100'}`}></span>
          </button>
          <div class="absolute left-0 mt-2 w-64 rounded-md shadow-lg bg-white dark:bg-gray-800 ring-1 ring-black ring-opacity-5 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
            <div class="py-1">
              <h3 class="px-4 py-2 text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">产品</h3>
              <a href="/products/laundry" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
                洗衣净水器
              </a>
              <h3 class="px-4 py-2 text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider mt-2">服务</h3>
              <a href="/services/care" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
                专业陪护服务
              </a>
              <a href="/services/insurance" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
                养护保险服务
              </a>
           </div>
          </div>
        </div>

        <div class="relative group">
          <a 
            href="/cases" 
            class={`inline-flex items-center px-1 pt-1 text-sm font-medium ${isSectionActive('/cases') ? 'text-purple-600 dark:text-purple-400' : 'text-gray-900 dark:text-white hover:text-purple-600 dark:hover:text-purple-400'}`}
          >
            成功案例
            <span class={`absolute bottom-0 left-0 w-full h-0.5 bg-purple-600 dark:bg-purple-400 transition-all duration-200 ${isSectionActive('/cases') ? 'scale-100' : 'scale-0 group-hover:scale-100'}`}></span>
          </a>
        </div>

        <div class="relative group">
          <a 
            href="/about" 
            class={`inline-flex items-center px-1 pt-1 text-sm font-medium ${isSectionActive('/about') ? 'text-purple-600 dark:text-purple-400' : 'text-gray-900 dark:text-white hover:text-purple-600 dark:hover:text-purple-400'}`}
          >
            关于我们
            <span class={`absolute bottom-0 left-0 w-full h-0.5 bg-purple-600 dark:bg-purple-400 transition-all duration-200 ${isSectionActive('/about') ? 'scale-100' : 'scale-0 group-hover:scale-100'}`}></span>
          </a>
        </div>

        <a 
          href="/contact" 
          class="ml-4 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-purple-600 hover:bg-purple-700 transition-colors"
        >
          联系我们
        </a>
      </nav>
      
      <!-- Mobile menu button -->
      <div class="md:hidden flex items-center">
        <button type="button" class="inline-flex items-center justify-center p-2 rounded-md text-gray-700 dark:text-gray-300 hover:text-purple-600 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none">
          <span class="sr-only">打开主菜单</span>
          <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>
</header>
