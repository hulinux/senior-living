---
import LayoutFooter from '../components/LayoutFooter.astro'
import LayoutHeader from '../components/LayoutHeader.astro'

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="zh">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <meta name="description" content={description} />
  <title>{title}</title>
  <style>
    :root {
      /* Light theme colors */
      --light-bg: #ffffff;
      --light-text: #1F2937;
      --light-purple: #8B5CF6;
      --light-purple-dark: #6D28D9;
      --light-card-bg: #ffffff;
      --light-card-text: #1F2937;
      
      /* Dark theme colors */
      --dark-bg: #111827;
      --dark-text: #f3f4f6;
      --dark-purple: #8B5CF6;
      --dark-purple-dark: #6D28D9;
      --dark-card-bg: #1f2937;
      --dark-card-text: #f3f4f6;
      
      /* Default to light theme */
      --directus-bg: var(--light-bg);
      --directus-text: var(--light-text);
      --directus-purple: var(--light-purple);
      --directus-purple-dark: var(--light-purple-dark);
      --directus-card-bg: var(--light-card-bg);
      --directus-card-text: var(--light-card-text);
    }

    @media (prefers-color-scheme: dark) {
      :root {
        --directus-bg: var(--dark-bg);
        --directus-text: var(--dark-text);
        --directus-purple: var(--dark-purple);
        --directus-purple-dark: var(--dark-purple-dark);
        --directus-card-bg: var(--dark-card-bg);
        --directus-card-text: var(--dark-card-text);
      }
    }

    body {
      background-color: var(--directus-bg);
      color: var(--directus-text);
      transition: background-color 0.2s ease, color 0.2s ease;
      margin: 0;
      padding: 0;
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    }

    .hero-section {
      background-color: var(--directus-purple);
      color: white;
      padding: 4rem 0;
    }

    .feature-section {
      background-color: var(--directus-purple-dark);
      color: white;
      padding: 4rem 0;
    }

    /* Add padding to main content to prevent header overlap */
    .main-content {
      padding-top: 80px; /* Increased from 64px to match py-12 (48px) + header height (48px) */
    }

    /* Ensure full width sections */
    .full-width {
      width: 100vw;
      margin-left: 50%;
      margin-right: 50%;
      left: -50vw;
      right: -50vw;
      position: relative;
    }

    .content-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 2rem;
    }

    /* Improve dark mode card readability */
    .feature-card {
      background-color: var(--directus-card-bg);
      color: var(--directus-card-text);
      border: 1px solid rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(8px);
      transition: all 0.2s ease;
    }

    .feature-card:hover {
      border-color: var(--directus-purple);
      transform: translateY(-2px);
    }

    /* Improve dark mode text contrast */
    .text-primary {
      color: var(--directus-purple);
    }

    .text-secondary {
      color: rgba(255, 255, 255, 0.8);
    }

    .text-muted {
      color: rgba(255, 255, 255, 0.6);
    }

    /* Improve dark mode button contrast */
    .btn-primary {
      background-color: var(--directus-purple);
      border-color: var(--directus-purple);
      color: white;
    }

    .btn-primary:hover {
      background-color: var(--directus-purple-dark);
      border-color: var(--directus-purple-dark);
    }
  </style>
</head>
<body class="antialiased">
  <LayoutHeader />
  <main class="main-content">
    <slot />
  </main>
  <LayoutFooter />
</body>
</html>
