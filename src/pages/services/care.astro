---
import DefaultLayout from '../../layouts/DefaultLayout.astro';

const service = {
  title: '居家康养服务',
  description: '专业护理人员提供24小时贴心陪护，让老人享受有尊严的晚年生活',
  longDescription: '我们的居家康养服务由专业持证护理人员提供，全天候为老年人提供生活照料、健康监测、心理慰藉等全方位服务。我们注重老人的个性化需求，为每位老人制定专属的护理计划，确保他们获得最适合的照顾。',
  features: [
    {
      title: '专业护理',
      description: '持证护理人员，经验丰富，专业可靠',
      icon: '👩‍⚕️'
    },
    {
      title: '24小时服务',
      description: '全天候陪护，随时响应老人需求',
      icon: '⏰'
    },
    {
      title: '个性化方案',
      description: '根据老人情况定制专属护理计划',
      icon: '📋'
    },
    {
      title: '健康管理',
      description: '定期健康监测，用药提醒',
      icon: '❤️'
    }
  ],
  serviceItems: [
    {
      title: '生活照料',
      items: ['个人卫生', '饮食照料', '居室清洁', '衣物洗涤']
    },
    {
      title: '医疗护理',
      items: ['生命体征监测', '用药管理', '康复训练', '医疗陪诊']
    },
    {
      title: '心理慰藉',
      items: ['陪伴聊天', '精神慰藉', '文娱活动', '社交支持']
    },
    {
      title: '其他服务',
      items: ['代购代办', '紧急呼叫', '夜间陪护', '临时托管']
    }
  ],
  benefits: [
    '让子女更放心，老人更舒心',
    '专业护理，避免居家意外风险',
    '保持老人生活自理能力',
    '提供情感支持和心理慰藉',
    '减轻家庭照护负担'
  ],
  faqs: [
    {
      question: '如何选择适合的居家康养服务？',
      answer: '我们会安排专业评估师上门评估老人的身体状况和需求，然后推荐最适合的服务方案。'
    },
    {
      question: '护理人员都经过培训吗？',
      answer: '是的，所有护理人员均经过专业培训并持有相关资格证书，同时我们还会进行定期的在职培训。'
    },
    {
      question: '服务不满意可以更换护理人员吗？',
      answer: '可以，如果您对服务不满意，可以随时联系客服要求更换护理人员。'
    }
  ]
};
---

<DefaultLayout title={service.title + ' - 银龄生活'} description={service.description}>
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Hero Section -->
    <div class="bg-white dark:bg-gray-900 rounded-2xl overflow-hidden shadow-xl mb-16">
      <div class="grid grid-cols-1 lg:grid-cols-2">
        <div class="p-8 sm:p-12 lg:py-16 lg:pr-0">
          <h1 class="text-4xl font-bold text-gray-900 dark:text-white sm:text-5xl">
            {service.title}
          </h1>
          <p class="mt-4 text-xl text-gray-600 dark:text-gray-300">
            {service.description}
          </p>
          <div class="mt-8 flex flex-col sm:flex-row gap-4">
            <a 
              href="/contact" 
              class="px-6 py-3 bg-purple-600 text-white rounded-md hover:bg-purple-700 transition-colors text-center font-medium"
            >
              免费咨询
            </a>
            <a 
              href="tel:+400-669-2119" 
              class="px-6 py-3 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded-md hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors text-center font-medium"
            >
              拨打热线
            </a>
          </div>
        </div>
        <div class="h-64 lg:h-auto lg:relative">
          <img 
            src="/images/old_care.png" 
            alt="Elderly care service" 
            class="h-full w-full object-cover"
          />
        </div>
      </div>
    </div>

    <!-- Service Features -->
    <section class="mb-16">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white">服务特色</h2>
        <p class="mt-4 text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          专业、贴心的全方位陪护服务
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {service.features.map((feature, index) => (
          <div key={index} class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-md hover:shadow-lg transition-shadow">
            <div class="text-4xl mb-4">{feature.icon}</div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">{feature.title}</h3>
            <p class="text-gray-600 dark:text-gray-300">{feature.description}</p>
          </div>
        ))}
      </div>
    </section>

    <!-- Service Items -->
    <section class="bg-gradient-to-r from-purple-50 to-blue-50 dark:from-purple-900/20 dark:to-blue-900/20 rounded-2xl p-8 md:p-12 mb-16">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white text-center mb-12">
          服务内容
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {service.serviceItems.map((item, index) => (
            <div key={index} class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-md">
              <h3 class="text-xl font-semibold text-purple-700 dark:text-purple-400 mb-4">{item.title}</h3>
              <ul class="space-y-2">
                {item.items.map((subItem, subIndex) => (
                  <li key={subIndex} class="flex items-start text-gray-600 dark:text-gray-300">
                    <svg class="w-5 h-5 text-green-500 mr-2 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    {subItem}
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Benefits Section -->
    <section class="mb-16">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white">服务优势</h2>
        <p class="mt-4 text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          为什么选择我们的居家康养服务？
        </p>
      </div>
      <div class="max-w-4xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-8">
        {service.benefits.map((benefit, index) => (
          <div key={index} class="flex items-start">
            <div class="flex-shrink-0 h-6 w-6 text-purple-600 dark:text-purple-400 mr-3 mt-1">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
            <p class="text-lg text-gray-700 dark:text-gray-300">{benefit}</p>
          </div>
        ))}
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="mb-16">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white">常见问题</h2>
        <p class="mt-4 text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          关于{service.title}的常见问题解答
        </p>
      </div>
      <div class="max-w-3xl mx-auto space-y-6">
        {service.faqs.map((faq, index) => (
          <div key={index} class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden">
            <details class="group">
              <summary class="flex items-center justify-between p-6 cursor-pointer">
                <h3 class="text-lg font-medium text-gray-900 dark:text-white">{faq.question}</h3>
                <svg class="w-5 h-5 text-gray-500 group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </summary>
              <div class="px-6 pb-6 pt-0 -mt-4 text-gray-600 dark:text-gray-300">
                {faq.answer}
              </div>
            </details>
          </div>
        ))}
      </div>
    </section>

    <!-- CTA Section -->
    <section class="bg-gradient-to-r from-purple-600 to-blue-600 text-white rounded-2xl p-8 md:p-12 text-center">
      <h2 class="text-3xl font-bold mb-4">为您的家人提供专业照护</h2>
      <p class="text-xl mb-8 max-w-2xl mx-auto">
        现在预约咨询，为老人选择最合适的居家康养方案
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/contact" 
          class="px-8 py-3 bg-white text-purple-600 rounded-md hover:bg-gray-100 transition-colors font-medium"
        >
          免费咨询
        </a>
        <a 
          href="tel:+400-669-2119" 
          class="px-8 py-3 border-2 border-white text-white rounded-md hover:bg-white hover:bg-opacity-10 transition-colors font-medium"
        >
          拨打热线
        </a>
      </div>
    </section>
  </main>
</DefaultLayout>
