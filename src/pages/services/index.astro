---
import DefaultLayout from '../../layouts/DefaultLayout.astro';

// Combined products and services data
const products = [
  {
    title: '净衣宝',
    slug: 'laundry',
    description: '为老年人提供专业、便捷的洗衣和净水设备，确保生活用水安全清洁',
    icon: '🚿',
    type: 'product',
    features: [
      '智能控制，操作简单',
      '高效过滤，水质更纯净',
      '节能环保，使用寿命长',
      '专业安装，售后无忧'
    ],
    image: '/images/products/laundry.jpg',
    category: '智能设备'
  },
  {
    title: '空气净化器',
    slug: 'air-purifier',
    description: '高效过滤室内空气污染物，为老年人创造健康呼吸环境',
    icon: '💨',
    type: 'product',
    features: [
      '多层高效过滤系统',
      '实时空气质量监测',
      '静音运行，节能省电',
      '智能APP远程控制'
    ],
    image: '/images/products/air-purifier.jpg',
    category: '智能设备'
  },
  {
    title: '老年护理设备',
    slug: 'elderly-care',
    description: '专为老年人设计的护理辅助设备，提升生活自理能力',
    icon: '🦽',
    type: 'product',
    features: [
      '防滑安全设计',
      '操作简便',
      '符合人体工程学',
      '多种型号可选'
    ],
    image: '/images/products/elderly-care.jpg',
    category: '护理设备'
  }
];

const services = [
  {
    title: '专业陪护服务',
    slug: 'care',
    description: '专业护理人员提供24小时贴心陪护，让老人享受有尊严的晚年生活',
    icon: '👵',
    type: 'service',
    features: [
      '专业持证护理人员',
      '24小时全天候服务',
      '个性化护理方案',
      '健康监测与记录'
    ],
    image: '/images/services/care.jpg',
    category: '生活护理'
  },
  {
    title: '孝行天下 康复无忧',
    slug: 'insurance',
    description: '全面的养护保险计划，为老年人的健康和生活质量提供保障',
    icon: '🛡️',
    type: 'service',
    features: [
      '专为老年人设计',
      '全面保障，保费合理',
      '快速理赔服务',
      '包含医疗和意外保障'
    ],
    image: '/images/services/insurance.jpg',
    category: '保险服务'
  },
  {
    title: '健康咨询服务',
    slug: 'consulting',
    description: '专业医疗团队提供健康咨询和用药指导',
    icon: '💊',
    type: 'service',
    features: [
      '专业医生在线问诊',
      '用药指导',
      '健康评估',
      '个性化健康方案'
    ],
    image: '/images/services/consulting.jpg',
    category: '健康咨询'
  }
