---
import DefaultLayout from '../../layouts/DefaultLayout.astro';

const service = {
  title: '净衣宝',
  description: '采用先进ESM技术的专业净水洗衣解决方案，为老年人提供更健康、更环保的洗涤体验',
  longDescription: '净衣宝采用创新的ESM(Electronic Sterilizing Module)技术，通过特殊材质产生具有强效杀菌能力的离子水，无需电力、无需添加任何化学洗涤剂即可实现深层清洁和杀菌效果。特别适合老年人敏感肌肤，有效减少化学物质残留，让衣物更安全、更健康。',
  features: [
    {
      title: 'ESM技术',
      description: '特殊材质产生杀菌离子，无需电力，无需添加化学洗涤剂',
      icon: '⚡'
    },
    {
      title: '深层清洁',
      description: '强效去除污渍和异味，保持衣物清新',
      icon: '✨'
    },
    {
      title: '环保健康',
      description: '零耗电，零化学添加，保护皮肤健康',
      icon: '🌱'
    },
    {
      title: '经济实惠',
      description: '一次安装，长期使用，无需耗材',
      icon: '💰'
    }
  ],
  productDetails: {
    model: 'ESM-2023',
    material: '特殊合金+环保材料',
    capacity: '适合所有类型洗衣机',
    installation: '简单安装，无需专业工具',
    maintenance: '无需电力，无需更换滤芯',
    certification: 'KC, CE, RoHS认证'
  },
  serviceItems: [
    {
      title: '产品特点',
      items: [
        '99.9%杀菌率',
        '去除农药残留',
        '减少皮肤过敏',
        '延长衣物寿命'
      ]
    },
    {
      title: '适用场景',
      items: [
        '家用洗衣机',
        '养老机构',
        '医院',
        '酒店'
      ]
    },
    {
      title: '安装维护',
      items: [
        '简单安装',
        '自动清洁',
        '无需电力',
        '长期使用'
      ]
    },
    {
      title: '客户服务',
      items: [
        '专业咨询',
        '上门安装',
        '使用指导',
        '售后保障'
      ]
    }
  ],
  benefits: [
    '100%无需电力，安全可靠',
    '零化学添加，保护敏感肌肤',
    '有效去除99.9%的细菌和病毒',
    '环保节能，减少水污染',
    '延长衣物使用寿命，节省开支'
  ],
  faqs: [
    {
      question: '净衣宝需要用电吗？',
      answer: '不需要，净衣宝采用特殊材质技术，完全不需要电力即可工作，更加安全可靠。'
    },
    {
      question: '安装复杂吗？',
      answer: '安装非常简单，只需将净衣宝连接到洗衣机的进水管即可，无需专业工具，5分钟即可完成安装。'
    },
    {
      question: '需要定期更换滤芯吗？',
      answer: '不需要，净衣宝采用特殊材质技术，无需更换滤芯，一次安装，长期使用。'
    },
    {
      question: '对水质有要求吗？',
      answer: '净衣宝适用于各种水质，无论是硬水还是软水地区都能发挥出色的清洁和杀菌效果。'
    }
  ]
};
---

<DefaultLayout title={`${service.title} - 银龄生活`} description={service.description}>
  <!-- Banner Section -->
  <div class="w-full" style="height: 40vh; min-height: 400px; overflow: hidden;">
    <img 
      src="http://www.ariumesm.com/img/main_slide01.png" 
      alt="净衣宝" 
      class="w-full h-full object-cover"
    />
  </div>

  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 -mt-4 relative z-10">
    <!-- Product Intro -->
    <section class="mb-16 bg-white rounded-2xl p-8 shadow-md">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">产品介绍</h2>
      <p class="text-gray-600 mb-6">
        {service.longDescription}
      </p>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-8">
        <div>
          <h3 class="text-xl font-semibold text-gray-900 mb-4">产品参数</h3>
          <ul class="space-y-3">
            <li class="flex justify-between">
              <span class="text-gray-600">产品型号</span>
              <span class="text-gray-900 font-medium">{service.productDetails.model}</span>
            </li>
            <li class="flex justify-between">
              <span class="text-gray-600">产品材质</span>
              <span class="text-gray-900 font-medium">{service.productDetails.material}</span>
            </li>
            <li class="flex justify-between">
              <span class="text-gray-600">适用容量</span>
              <span class="text-gray-900 font-medium">{service.productDetails.capacity}</span>
            </li>
            <li class="flex justify-between">
              <span class="text-gray-600">安装方式</span>
              <span class="text-gray-900 font-medium">{service.productDetails.installation}</span>
            </li>
            <li class="flex justify-between">
              <span class="text-gray-600">维护需求</span>
              <span class="text-gray-900 font-medium">{service.productDetails.maintenance}</span>
            </li>
            <li class="flex justify-between">
              <span class="text-gray-600">认证信息</span>
              <span class="text-gray-900 font-medium">{service.productDetails.certification}</span>
            </li>
          </ul>
        </div>
        <div>
          <h3 class="text-xl font-semibold text-gray-900 mb-4">产品特点</h3>
          <div class="grid grid-cols-2 gap-4">
            {service.features.map((feature) => (
              <div class="bg-gray-50 p-4 rounded-lg">
                <div class="text-3xl mb-2">{feature.icon}</div>
                <h4 class="font-medium text-gray-900">{feature.title}</h4>
                <p class="text-sm text-gray-600">{feature.description}</p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Service Details -->
    <section class="mb-16">
      <div class="bg-white rounded-2xl p-8 shadow-md">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">服务内容</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {service.serviceItems.map((item) => (
            <div class="bg-gray-50 p-6 rounded-lg">
              <h3 class="text-lg font-semibold text-gray-900 mb-4">{item.title}</h3>
              <ul class="space-y-2">
                {item.items.map((subItem) => (
                  <li class="flex items-center text-gray-600">
                    <span class="w-1.5 h-1.5 bg-blue-500 rounded-full mr-2"></span>
                    {subItem}
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Benefits Section -->
    <section class="mb-16">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900">为什么选择我们的{service.title}？</h2>
        <p class="mt-4 text-xl text-gray-600 max-w-3xl mx-auto">
          我们致力于为老年人提供最健康、最环保的洗衣解决方案
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {service.benefits.map((benefit, index) => (
          <div class="bg-white p-6 rounded-xl shadow-md">
            <div class="flex items-start">
              <div class="flex-shrink-0 bg-blue-100 w-10 h-10 rounded-full flex items-center justify-center mr-4 mt-0.5">
                <span class="text-blue-600 font-medium">{index + 1}</span>
              </div>
              <span class="text-gray-700 leading-relaxed">{benefit}</span>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="mb-16">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900">常见问题</h2>
        <p class="mt-4 text-xl text-gray-600 max-w-3xl mx-auto">
          关于{service.title}的常见问题解答
        </p>
      </div>
      <div class="max-w-3xl mx-auto">
        <div class="space-y-4">
          {service.faqs.map((faq) => (
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
              <details class="group">
                <summary class="px-6 py-4 flex justify-between items-center cursor-pointer">
                  <h3 class="text-lg font-medium text-gray-900">{faq.question}</h3>
                  <svg class="w-5 h-5 text-gray-500 transition-transform duration-200 group-open:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </summary>
                <div class="px-6 pb-4 text-gray-600">
                  {faq.answer}
                </div>
              </details>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <div id="contact" class="bg-gradient-to-r from-purple-600 to-blue-600 text-white rounded-2xl p-12 text-center mb-12">
      <h2 class="text-3xl font-bold mb-4">立即体验{service.title}服务</h2>
      <p class="text-xl mb-8 max-w-2xl mx-auto">
        为您的家人提供安全、健康的净水洗衣服务，让生活更美好
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <a 
          href="/contact" 
          class="px-8 py-3 bg-white text-blue-600 rounded-md hover:bg-gray-100 transition-colors font-medium"
        >
          免费预约
        </a>
        <a 
          href="tel:+400-669-2119" 
          class="px-8 py-3 border border-white text-white rounded-md hover:bg-blue-700 transition-colors font-medium"
        >
          400-669-2119
        </a>
      </div>
    </div>
  </main>
</DefaultLayout>
