---
import DefaultLayout from '../layouts/DefaultLayout.astro';
import HeroCarousel from '../components/HeroCarousel.astro';
---

<DefaultLayout title="首页" description="欢迎访问我们的网站">
  <div class="hero-section full-width">
    <HeroCarousel />
  </div>

  <div class="feature-section full-width">
    <div class="content-container">
      <h2 class="text-3xl font-bold mb-8 text-primary">特色功能</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="feature-card p-6 rounded-lg bg-purple-600/10 dark:bg-purple-600/20">
          <h3 class="text-xl font-semibold mb-4 text-primary">快速开发</h3>
          <p class="text-gray-900 dark:text-white text-secondary">使用 Astro 构建的现代化网站</p>
        </div>
        <div class="feature-card p-6 rounded-lg bg-purple-600/10 dark:bg-purple-600/20">
          <h3 class="text-xl font-semibold mb-4 text-primary">响应式设计</h3>
          <p class="text-gray-900 dark:text-white text-secondary">适配各种设备的布局</p>
        </div>
        <div class="feature-card p-6 rounded-lg bg-purple-600/10 dark:bg-purple-600/20">
          <h3 class="text-xl font-semibold mb-4 text-primary">性能优化</h3>
          <p class="text-gray-900 dark:text-white text-secondary">快速加载和优秀性能</p>
        </div>
      </div>
    </div>
  </div>
</DefaultLayout>