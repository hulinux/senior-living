---
import DefaultLayout from '../layouts/DefaultLayout.astro';
import HeroCarousel from '../components/HeroCarousel.astro';

// Sample data for services
const services = [
  {
    title: '洗衣净水器',
    description: '为老年人提供专业、便捷的洗衣和净水设备，确保生活用水安全清洁',
    icon: '🚿',
    link: '/services/laundry'
  },
  {
    title: '陪护助养服务',
    description: '专业护理人员提供24小时贴心陪护，让老人享受有尊严的晚年生活',
    icon: '👵',
    link: '/services/care'
  },
  {
    title: '养护保险服务',
    description: '全面的养护保险计划，为老年人的健康和生活质量提供保障',
    icon: '🛡️',
